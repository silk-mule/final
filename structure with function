#include<iostream>
#include<string>
#include<fstream>
using namespace std;
struct Person{
    int id;
    string name;
    string designation;
    int hours;
    int perhour;
    Person() {
    id = 0;
    name = "";
    designation = "";
    hours = 0;
    perhour = 0;
}
    Person(int i,string n,string d,int h,int ph){
        id = i;
        name = n;
        designation = d;
        hours = h;
        perhour = ph;
    }
    int calculate(int a , int b){
        return a*b*30;
    }
    int yearlySalary(){
        return calculate(hours, perhour)*12*(1-0.17);
    }
};
main(){
int per;
cout<<"Enter the number of persons: "<<endl;
cin>>per;
Person *p = new Person[per];
ofstream sal("data.txt");
for(int i=0; i<per; i++){
    cout<<"Enter the id of person: "<<endl;
    cin>>p[i].id;
    cout<<"Enter the name if person: "<<endl;
    cin.ignore();
    getline(cin,p[i].name);
    cout<<"Enter the designation of person: "<<endl;
    cin>>p[i].designation;
    cout<<"Enter the hours worked by person: "<<endl;
    cin>>p[i].hours;
    cout<<"Enter the hourly rate of person: "<<endl;
    cin>>p[i].perhour;
    int salary = p[i].calculate(p[i].hours,p[i].perhour);
    cout<<"The salary of "<<p[i].name<<" is: "<<salary<<endl;
    sal<<p[i].id<<"  "<<p[i].name<<"  "<<p[i].designation<<"  "<<p[i].hours<<"  "<<p[i].perhour<<"  "<<salary<<" "<<p[i].yearlySalary()<<endl;
}
    sal.close();

}
