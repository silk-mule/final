#include<iostream>
#include<fstream>

using namespace std;
struct detail{
string roll;
string name;
string discipline;
int subjects;
int obtmarks;
int average;
};
int avera(int obt,int tot){
return obt/tot;
}
int main(){
    int num;
cout<<"Enter the number of student: "<<endl;
cin>>num;
detail *stud = new detail[num];
for(int i=0; i<num; i++){
    cout<<"Enter the roll number of student: "<<i+1<<endl;
    cin>>stud[i].roll;
    cout<<"Enter the name of student: "<<i+1<<endl;
      cin.ignore(); 
      getline(cin,stud[i].name);
    cout<<"Enter the discipline of student: "<<i+1<<endl;
    cin>>stud[i].discipline;
    cout<<"Enter the total subjects: "<<endl;
    cin>>stud[i].subjects;
    cout<<"Enter the obtained marks: "<<endl;
    cin>>stud[i].obtmarks;   
   stud[i].average=avera(stud[i].obtmarks,stud[i].subjects);
}
ofstream fin("detail.txt");
fin<<"Roll No. "<<"\t"<<"Name. "<<"\t"<<"Discipline."<<"\t"<<"Total Subjects"<<"\t"<<"Obtained Marks"<<"\t"<<"Average Marks"<<endl;
for(int i=0; i<num; i++){
    fin<<stud[i].roll<<"\t"<<stud[i].name<<"\t"<<stud[i].discipline<<"\t"<<stud[i].subjects<<"\t"<<stud[i].obtmarks<<"\t"<<stud[i].average<<endl;
}
    return 0;
}
#include<string>
